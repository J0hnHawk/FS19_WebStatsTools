    <storeData>
        <name>Crane</name>
        <image>$data/vehicles/lizard/crane/store_crane.png</image>
        <canBeSold>false</canBeSold>
        <showInStore>false</showInStore>
        <price>0</price>
        <lifetime>0</lifetime>
        <rotation>0</rotation>
        <brand>LIZARD</brand>
        <category>misc</category>
