        <movingParts>
            <movingPart node="spring" referencePoint="springRef" referenceFrame="springRef" scaleZ="true" isActiveDirty="true"/>
        </movingParts>
        <sounds>
            <hydraulic template="DEFAULT_HYDRAULIC_SOUND" linkNode="mks8_main_component1"/>
